#! /bin/env zsh

min_=60
POMODORO=$((25 * min_))
POMODORI=$((5 * min_))

function pomodoro25() {
  bell1
  local POMODORO=$((22 * min_))
  bell4
  sleep ${POMODORO}
  sleep 54.8
  sleep 45.3
  sleep 54.8
  bell1
}

function pomodoro20() {
  bell1
  local POMODORO=$((17 * min_))
  bell3
  sleep ${POMODORO}
  sleep 54.8
  sleep 51.8
  sleep 54.8
  bell1
}

function pomodoro15() {
  bell1
  local POMODORO=$((12 * min_))
  bell8
  sleep ${POMODORO}
  sleep 54.8
  sleep 49.7
  sleep 54.8
  bell1
}

function pomodori10() {
  bell2
  local POMODORI=$((7 * min_))
  bell6
  sleep ${POMODORI}
  sleep 51.8
  sleep 2.6
  sleep 51.8
  bell2
}

function pomodori5() {
  bell2
  local POMODORI=$((2 * min_))
  bell9
  sleep ${POMODORI}
  sleep 51.8
  sleep 39.8
  sleep 51.8
  bell2
}

function pomodorotimer60min() {
  pomodoro25
  pomodori5
  pomodoro25
  pomodori5
}

function pomodorotimer75min() {
  pomodoro25
  pomodori5
  pomodoro20
  pomodori5
  pomodoro15
  pomodori5
}

function pomodorotimer90min() {
  pomodoro20
  pomodori5
  pomodoro15
  pomodori5
  pomodoro20
  pomodori5
  pomodoro15
  pomodori5

}
function pomodorotimer3heures() {
  pomodorotimer90min
  pomodorotimer90min
}
function pomodorotimer5heures() {
  pomodorotimer75min
  pomodorotimer75min
  pomodorotimer75min
  pomodorotimer75min
}
pomodorotimer5heures
pomodorotimer3heures
exit 0
# bell1; sleep 54.8 # //      5.1889s elevator
